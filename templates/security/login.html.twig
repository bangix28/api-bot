{% extends 'base.html.twig' %}

{% block title %}Connexion Beauce-tigers{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-6 col-lg-4">
            <form method="post" class="p-4 bg-light rounded shadow">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>

                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group form-check p-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                    <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
                </div>

                <div class="text-center">
                    <button class="btn btn-lg btn-success btn-block" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>


{% endblock %}
